<script>
    document.addEventListener("DOMContentLoaded", function () {
        var closeButton = document.querySelector("#status_card_section .btn-close");
        var alertElement = document.querySelector("#status_card_section .alert");

        closeButton.addEventListener("click", function () {
            alertElement.classList.add("d-none");
        });
    });
</script>